#extend("base")

#export("title") { Posts }

#export("breadcrumb") {
	<li><a href="/">Home</a></li>
	<li>Admin</li>
	<li class="active">Posts</li>
}

#export("content") {
	<div class="page-header">
		<div class="row">
			<div class="col-lg-12">
				<h1>Posts</h1>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12">
			<table class="table table-striped table-hover table-center">
				<thead>
					<tr>
						<th>#</th>
						<th>Title</th>
						<th>Author</th>
						<th>Published at</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					#loop(posts.data, "post") {
						<tr>
							<td>#(offset)</td>
							<td>#(post.title)</td>
							<td>#(post.author.username)</td>
							<td>#date(post.createdAt, "1", "en_US")</td>
							<td>
								<a href="/admin/posts/#(post.id)/edit" class="btn btn-default btn-sm" role="button">Edit</a>

								#if(post.deletedAt) {
									<a href="/admin/posts/#(post.id)/restore" class="btn btn-info btn-sm" role="button">Restore</a>
								} ##else() {
									<a href="/admin/posts/#(post.id)/delete" class="btn btn-danger btn-sm" role="button">Delete</a>
								}
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>

	#paginator(posts)
}
